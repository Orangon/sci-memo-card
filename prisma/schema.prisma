generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model PresetDomain {
  id        Int      @id @default(autoincrement())
  name      String   @unique @db.VarChar(100)
  createdAt DateTime @default(now()) @map("created_at")

  @@map("preset_domains")
  @@index([name], map: "idx_preset_domain_name")
}

model Flashcard {
  id          Int      @id @default(autoincrement())
  sentence    String   @db.Text
  word        String   @db.VarChar(255)
  translation String   @db.Text
  definition  String?  @db.Text
  domain      String?  @db.VarChar(100)
  mastery     Int      @default(1) @db.SmallInt
  reviewCount Int      @default(0) @map("review_count")
  nextReview  DateTime @default(now()) @map("next_review")
  createdAt   DateTime @default(now()) @map("created_at")

  @@index([nextReview], map: "idx_next_review")
  @@index([domain], map: "idx_domain")
  @@index([mastery], map: "idx_mastery")
  @@map("flashcards")
}
